{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "overkami",
  "version": "0.1.0",
  "identifier": "overkami.tasuren.jp",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "overkami - オーバーカミ！",
        "width": 700,
        "height": 550,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "alwaysOnTop": true,
        "trafficLightPosition": {
          "x": 16,
          "y": 20
        },
        "windowEffects": {
          "effects": ["acrylic", "sidebar"]
        }
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
