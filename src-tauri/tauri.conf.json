{
    "productName": "overkami",
    "version": "0.1.0",
    "identifier": "jp.tasuren.overkami",
    "build": {
        "beforeDevCommand": "pnpm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "overkami",
                "width": 600,
                "height": 500,
                "transparent": true,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true,
                "windowEffects": {
                    "effects": ["menu", "mica"]
                }
            }
        ],
        "security": {
            "csp": null
        },
        "macOSPrivateApi": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
